{
    "name": "dbus",
    "script_type": "daemon",
    "depends": [
    	"machine-id"
    ],

    "start": [
	"dbus-uuidgen --ensure=/etc/machine-id || exit 0",
	"install -dm775 /run/dbus",
        "dbus-daemon --system"
    ],
    "stop": [
        "pkill dbus-daemon",
        "rm /run/dbus/system_bus_socket"
    ]
}
